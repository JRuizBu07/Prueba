@model Prueba.Models.FCT

@{
    ViewData["Title"] = "Create";

    if (null != TempData["alertMessage"])
    {
        <script type="text/javascript">
            alert('@TempData["alertMessage"]');
        </script>
    }
}

<h1>Create</h1>

<h4>FCT</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId">
                    <option value="">Selecciona un remitente</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="IdSucursalDestino" class="control-label"></label>
                <select asp-for="IdSucursalDestino" class="form-control" asp-items="ViewBag.SucursalId">
                    <option value="">Selecciona una sucursal de destino</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SucursalId" class="control-label"></label>
                <select asp-for="SucursalId" class="form-control" asp-items="ViewBag.SucursalId">
                    <option value="">Selecciona una sucursal de origen</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="DestinatarioId" class="control-label"></label>
                <select asp-for="DestinatarioId" class="form-control" asp-items="ViewBag.DestinatarioId">
                    <option value="">Selecciona un destinatario</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
