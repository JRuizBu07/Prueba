@model Prueba.Models.Documento

@{
    ViewData["Title"] = "Create";

}
@ViewBag

<h1>Create</h1>

<h4>Documento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TipoDocumento" class="control-label">Seleccione el tipo de </label>
                <select asp-for="TipoDocumento" class="form-control">
                    <option value="">Seleccione una tipo de documento</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaRecaudo" class="control-label"></label>
                <input asp-for="FechaRecaudo" class="form-control" />
                <span asp-validation-for="FechaRecaudo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SucursalId" class="control-label">Sucursal Origen</label>
                <select asp-for="SucursalId" class="form-control" asp-items="@ViewBag.SucursalId">
                    <option value="">Seleccione una sucursal</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label">Clientes</label>
                <select asp-for="ClienteId" class="form-control" asp-items="@ViewBag.ClienteId">
                    <option value="">Seleccione un cliente</option>
                </select>
            </div>
            <div class="form-group my-5">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
